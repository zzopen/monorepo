{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./lib",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "strict": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@commands/*": [
                "src/commands/*"
            ],
            "@commons/*": [
                "src/common/*"
            ],
            "@templates/*": [
                "src/templates/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib/**/*"
    ],
}