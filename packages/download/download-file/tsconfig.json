{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "removeComments": true,
        "isolatedModules": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.js",
    ]
}