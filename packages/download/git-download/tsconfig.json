{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "index.js", "__tests__/test.ts"],
  "exclude": ["node_modules", "dist/**/*"]
}
