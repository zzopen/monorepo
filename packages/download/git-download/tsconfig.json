{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./lib",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "strict": true,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "sourceMap": true,
        "declaration": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@http/*": [
                "src/http/*"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "@module/*": [
                "src/module/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "index.js"
    ],
    "exclude": [
        "node_modules",
        "lib/**/*"
    ],
}